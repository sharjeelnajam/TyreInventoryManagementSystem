@page "/staff"
@using Domain
@using Infrastructure.Services
@inject IStaffService StaffService
@inject NavigationManager NavigationManager
@rendermode InteractiveServer

<PageTitle>Staff Management</PageTitle>

<div class="container mt-4">
    <!-- Header with title + Add button -->
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3 class="fw-bold">
            <i class="bi bi-people-fill me-2"></i> Staff Management
        </h3>
        <button class="btn btn-primary" @onclick="AddStaff">
            <i class="bi bi-plus-circle me-1"></i> Add Staff
        </button>
    </div>

    @if (staff == null)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-primary" role="status"></div>
            <p class="mt-2">Loading staff...</p>
        </div>
    }
    else if (!staff.Any())
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle me-2"></i> No staff found. Click <b>Add Staff</b> to create one.
        </div>
    }
    else
    {
        <div class="table-responsive shadow-sm rounded">
            <table class="table table-striped table-hover align-middle">
                <thead class="table-primary">
                    <tr>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Phone</th>
                        <th>City</th>
                        <th>Salary</th>
                        <th style="width: 150px;">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var emp in staff)
                    {
                        <tr>
                            <td>@emp.Name</td>
                            <td>@emp.Email</td>
                            <td>@emp.PhoneNumber</td>
                            <td>@emp.City</td>
                            <td>@emp.Salary.ToString("C")</td>
                            <td>
                                <i class="bi bi-pencil-square text-primary fs-5 me-3 cursor-pointer"
                                   title="Edit Staff"
                                   @onclick="() => EditStaff(emp.Id)">
                                </i>
                                <i class="bi bi-trash text-danger fs-5 cursor-pointer"
                                   title="Delete Staff"
                                   @onclick="() => DeleteStaff(emp.Id)">
                                </i>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>

@code {
    private List<Staff>? staff;

    protected override async Task OnInitializedAsync()
    {
        await LoadStaffAsync();
    }

    private async Task LoadStaffAsync()
    {
        staff = await StaffService.GetAllStaffAsync();
    }

    private void AddStaff()
    {
        NavigationManager.NavigateTo("/staff/addedit");
    }

    private void EditStaff(Guid id)
    {
        NavigationManager.NavigateTo($"/staff/addedit/{id}");
    }

    private async Task DeleteStaff(Guid id)
    {
        var confirmed = await JSRuntime.InvokeAsync<bool>("confirm", $"Are you sure you want to delete this staff member?");
        if (!confirmed)
            return;

        var result = await StaffService.DeleteAsync(id);
        if (result)
        {
            await LoadStaffAsync(); // Refresh list
        }
        else
        {
            Console.WriteLine("Error deleting staff.");
        }
    }

    [Inject]
    private IJSRuntime JSRuntime { get; set; } = default!;
}
